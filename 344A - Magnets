import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.StringTokenizer;

public class Main {
    public static void main(String[] args) throws IOException {
        FastScanner fs = new FastScanner();
        int n = fs.nextInt();
        // There are n magnets; read the first magnet to start counting groups.
        String first = fs.next();
        int groups = 1; // At least one magnet forms one group

        String prev = first;
        for (int i = 1; i < n; i++) {
            String cur = fs.next();
            // When the magnet type changes, a new group starts.
            if (!cur.equals(prev)) {
                groups++;
            }
            prev = cur;
        }
        System.out.println(groups);
    }

    // Simple fast scanner for tokenized input
    private static class FastScanner {
        BufferedReader br;
        StringTokenizer st;

        FastScanner() {
            br = new BufferedReader(new InputStreamReader(System.in));
        }

        String next() throws IOException {
            while (st == null || !st.hasMoreElements()) {
                String line = br.readLine();
                if (line == null) return null;
                st = new StringTokenizer(line);
            }
            return st.nextToken();
        }

        int nextInt() throws IOException {
            return Integer.parseInt(next());
        }
    }
}
