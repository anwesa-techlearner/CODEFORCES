import java.io.BufferedReader;
import java.io.IOException;
import java.io.InputStreamReader;

public class Main {
    public static void main(String[] args) throws IOException {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        String a = br.readLine();
        String b = br.readLine();

        // If lines could have trailing spaces/newlines; trim is optional here since
        // the problem guarantees inputs are exact binary strings, but we can be safe.
        if (a != null) a = a.trim();
        if (b != null) b = b.trim();

        int n = Math.max(a.length(), b.length());
        // The problem guarantees equal length, but handle gracefully anyway
        StringBuilder sb = new StringBuilder(n);

        for (int i = 0; i < n; i++) {
            char ca = i < a.length() ? a.charAt(i) : '0';
            char cb = i < b.length() ? b.charAt(i) : '0';
            // XOR: if different -> '1', else '0'
            sb.append(ca == cb ? '0' : '1');
        }

        System.out.println(sb.toString());
    }
}
