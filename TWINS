import java.io.*;
import java.util.*;
 
public class Main {
    public static void main(String[] args) throws IOException {
        BufferedReader br = new BufferedReader(new InputStreamReader(System.in));
        String line = br.readLine();
        int n = Integer.parseInt(line.trim());
 
        String[] parts = br.readLine().trim().split("\\s+");
        int[] a = new int[n];
        int total = 0;
        for (int i = 0; i < n; i++) {
            a[i] = Integer.parseInt(parts[i]);
            total += a[i];
        }
 
        Arrays.sort(a);
        // take from largest to smallest
        int takenSum = 0;
        int count = 0;
        for (int i = n - 1; i >= 0; i--) {
            takenSum += a[i];
            count++;
            if (takenSum > total - takenSum) {
                System.out.println(count);
                return;
            }
        }
 
        // In case all coins are needed (edge case, though by problem constraints it shouldn't happen)
        System.out.println(count);
    }
}
